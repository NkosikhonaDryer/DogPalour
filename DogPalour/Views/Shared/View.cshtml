<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .container {
            padding: 16px;
        }
    </style>
</head>
<body style="">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DogPalour", "EmployeeHome", "Employees", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "EmployeeHome", "Employees")</li>
                    <li>@Html.ActionLink("Dashboard", "MyDetails", "Employees")</li>
                                    
                     <li>@Html.ActionLink("Logout", "Index", "Home")</li>
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="modal fade LivePop">
        <div class="modal-dialog">
            <div class="modal-content" style="width:58%;">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close"><span>&times;</span></button>
                    <div class="modal-title"><b>Login as</b></div>
                </div>
                <div class="modal-body">
                    <a id="Li" style=" border: none; border-radius: 2rem; padding: 1rem 4rem; font-size: 2rem; cursor: pointer; background: #87CEEB;"
                       href="@Url.Action("Login","Admins")" class="btn-default">Admin</a>

                    <a style=" border: none; border-radius: 2rem; padding: 1rem 4rem; font-size: 2rem; cursor: pointer; background: #87CEEB;"
                       href="@Url.Action("Login","Customers")" class="btn-default">Customer</a><br /><br />

                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

