@model DogPalour.Models.Payment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
@if(TempData["Amount"] != null)
            {
                <div>
                    <p>
                        <b>
                            @TempData["Amount"].ToString();
                        </b>
                    </p>
                </div>
            }
<div>
    <p>
        <h2>Make payment</h2><h2 style="position:absolute;left:110rem;bottom:53rem">Due R @ViewBag.AmountDue</h2>
    </p>
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div style="width:500px;position:relative;left:35rem" class="form-horizontal jumbotron">
       <div class="text-center">
           <p>
               <i class="fab fa-3x fa-cc-mastercard"></i>
               <i class="fab fa-3x fa-cc-visa"></i>
               <i class="fab fa-3x fa-cc-discover"></i>
           </p>
       </div>
        <hr />
        <div style="position:relative;left:5rem">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" name="CustomerEmail" value="@ViewBag.EmailC"/>
            <input type="hidden" name="AmountDue" value="@ViewBag.AmountDue"/>
            <input type="hidden" name="BookingId" value="@ViewBag.BookingId"/>
            <input type="hidden" name="Amount" value="@ViewBag.AmountDue"/>
           

            <div class="form-group">

                <div class="col-md-10">
                    @Html.LabelFor(model => model.CardNumber, htmlAttributes: new { })
                    @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-control",@placeholder = "**** **** **** ****" } })
                    @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.LabelFor(model => model.CVV, htmlAttributes: new { })
                    @Html.EditorFor(model => model.CVV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CVV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.LabelFor(model => model.Exp, htmlAttributes: new { })
                    @Html.EditorFor(model => model.Exp, new { htmlAttributes = new { @class = "form-control",@placeholder = "12/25" } })
                    @Html.ValidationMessageFor(model => model.Exp, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="width:300px;position:relative;right:6.8rem;border-radius:12rem" type="submit" value="Submit Payment" class="btn btn-default btn-success" />
                </div>
            </div>

        </div>
     </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
