@model DogPalour.Models.Service

@{
    ViewBag.Title = "CornfirmDetails";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div>
    <p>
        <a style="" class="btn btn-default btn-success" href="@Url.Action("Details","Dog1",new {id = ViewBag.dogId})">Cancel</a>

    </p>
</div>

<div class="text-center">
    <h2>Confirm adding @Model.ServiceType services</h2><br />

    <hr />
 
</div>
<div>
    <p>
        <h3>
           Price: R @ViewBag.Price
        </h3>
    </p>
</div>
<hr/>
<div class="row">
    <div class="col-lg-6">
        <div>
            <h4><b>Service Information</b></h4>
            <hr />
        </div>
        <div style="border:solid #000000;height:200px">
            <h4><b>Services Description</b></h4>
            <hr />
            <p>
                <b>
                    @Model.Description
                </b>
            </p>
        </div>
        <div>
            <div>
                <br />
                @using (Html.BeginForm("Create", "DogServices", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="DogId" value="@ViewBag.dogId" />
                    <input type="hidden" name="ServiceID" value="@Model.id" />
                    <input type="hidden" name="ServiceType" value="@Model.ServiceType" />
                    <input type="hidden" name="Description" value="@Model.Description" />
                    <input type="hidden" name="Price" value="@ViewBag.Price" />

                    <button style="width:550px;position:relative;left:0.3rem" class="btn btn-default btn-success">
                        Add R @ViewBag.Price
                    </button>
                }
            </div>
            <hr />

        </div>
   
    </div>
    <div class="col-lg-6">
        <div>
            <img src="@Url.Content(ViewBag.Path)" style="width:480px;height:400px;position:relative;left:5rem;top:5rem" />
        </div>
    </div>

</div>

