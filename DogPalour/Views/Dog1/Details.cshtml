@model DogPalour.Models.Dog1

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div>
    <p>
        <a class="btn btn-default btn-success" href="@Url.Action("Details","Bookings",new{id = Model.BookingID})">
            Done
        </a>
    </p>
    
</div>
<div><p><h4>Add Services for  @Html.DisplayFor(model => model.Name)</h4></p></div>
<div>
    <div>
        @if(TempData["ServiceAdding"] != null)
            {
        <div class="text-center text-success">
            @TempData["ServiceAdding"].ToString();
        </div>
            }
    </div>
    <hr />
</div>
@using(Html.BeginForm("FinishBooking","Bookings",FormMethod.Post))
 {

 }
<div>
    <div class="row" style="position:relative;left:11rem">
        @foreach (var item in ViewBag.Services)
        {

            <div class="col-md-4" style="border:solid #000000; width:300px;">
                <div style="display:flex;align-content:center;justify-content:center;">
                    <img src="@Url.Content(item.picPath)" style="width:280px;height:200px;position:relative;top:1.5rem" />
                </div>
                <hr />
                <div>
                    <p>
                        <h4>
                            <b>
                                @item.ServiceType
                            </b>
                        </h4>
                    </p>
                </div>
                <hr />
                <div style="position:relative;left:2.5rem">
                    <a style="width:280px;position:relative;right:3.3rem" class="btn btn-default btn-success" href="@Url.Action("CornfirmDetails", "Services", new { id=item.id,dogSize = Model.Size, dogId = Model.id})">
                        Add service
                    </a>
                </div>
            </div>

            <div class="col-md-4" style="width:1rem">

            </div>

            <div class="modal fade @item.id">
                <div class="modal-dialog">
                    <div class="modal-content" style="width:58%;">
                        <div class="modal-header">
                            <button data-dismiss="modal" class="close"><span>&times;</span></button>
                            <div class="modal-title"><b>Fonfirm To Delete</b></div>
                        </div>
                        <div class="modal-body">
                            <h4>Are you sure you wan to delete this</h4>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-default btn-success">
                                Cancel
                            </button>
                            <button class="btn btn-default btn-danger">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>




<p>
